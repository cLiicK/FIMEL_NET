	<script>
		$(".btn-toggle").click(function () {
		  if ($(this).hasClass("active")) {
			$(".btn-toggle").removeClass("active");
		  }
		  else {
			$(".btn-toggle").removeClass("active");
			$(this).addClass("active");
		  }
		});
	</script>
